<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateActivity2"
    android:background="@drawable/d2">

    <TextView
        android:id="@+id/textViewH1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Update student details"
        android:textAlignment="center"
        android:textColor="#F3ECEC"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- H3: admin panel -->
    <TextView
        android:id="@+id/textViewH3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="admin panel"
        android:textAlignment="center"
        android:textColor="#F4ECEC"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/textViewH1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Container for EditTexts and Button -->
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/blackfull"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewH3">

        <EditText
            android:id="@+id/updateName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/blue_border1"
            android:gravity="start|center_vertical"
            android:hint="Enter name"
            android:textColorHint="@color/dimgrey"
            android:padding="16dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/updateDegree"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/blue_border1"
            android:gravity="start|center_vertical"
            android:textColorHint="@color/dimgrey"
            android:hint="Enter Degree type"
            android:padding="16dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/updateIndex"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/blue_border1"
            android:gravity="start|center_vertical"
            android:hint="Enter Student Index"
            android:textColorHint="@color/dimgrey"
            android:padding="16dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/updateGpa"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/blue_border1"
            android:gravity="start|center_vertical"
            android:hint="Enter GPA"
            android:textColorHint="@color/dimgrey"
            android:padding="16dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/updateButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/black_border"
            android:backgroundTint="@color/cotonablue"
            android:text="Update"
            android:textSize="18sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>